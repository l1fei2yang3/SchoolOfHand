<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment2">
    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <View
            android:id="@+id/dot_0"
            android:layout_width="5dip"
            android:layout_height="5dip"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            />
        <View
            android:id="@+id/dot_1"
            android:layout_width="5dip"
            android:layout_height="5dip"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            />

        <View
            android:id="@+id/dot_2"
            android:layout_width="5dip"
            android:layout_height="5dip"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/gongimg"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:textAlignment="center"
                android:src="@drawable/gonggaobtn"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="公告"
                android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/chongzhi"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:textAlignment="center"
                android:src="@drawable/chongzhibtn"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="充值"
                android:layout_gravity="center"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/xiaofeng"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:textAlignment="center"
                    android:src="@drawable/xiaofeng"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="校园风采"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/xiyuanjianjie"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:textAlignment="center"
                    android:src="@drawable/xiaoyuanjianjie"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="校园简介"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="67dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="23dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/classtime"
                            android:layout_width="67dp"
                            android:layout_height="67dp"
                            android:textAlignment="center"
                            android:src="@mipmap/classtime"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="课程表"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="67dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/kaoshi"
                            android:layout_width="67dp"
                            android:layout_height="67dp"
                            android:textAlignment="center"
                            android:src="@mipmap/koashi"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="考试安排"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="67dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/link"
                            android:layout_width="67dp"
                            android:layout_height="67dp"
                            android:textAlignment="center"
                            android:src="@mipmap/link"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="友情链接"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="67dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/note"
                            android:layout_width="67dp"
                            android:layout_height="67dp"
                            android:textAlignment="center"
                            android:src="@mipmap/note"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="收藏列表"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/studay"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:textAlignment="center"
                        android:src="@mipmap/studay"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="学习情况"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/schedule"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:textAlignment="center"
                        android:src="@mipmap/schedule"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="个人日程"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/dept"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:textAlignment="center"
                        android:src="@mipmap/dept"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="部门查询"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/server"
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:textAlignment="center"
                        android:src="@mipmap/server"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="分类检索"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>